<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>UID</th>
			<th>Email</th>
			<th>Roll</th>
			<th>Action</th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
			<% case user.role %>
			<% when USER_ROLE_SYSTEM_ADMIN %>
			<% rollString = "System Admin" %>
			<% when USER_ROLE_APP_ADMIN %>
			<% rollString = "App Admin" %>
			<% when USER_ROLE_VIEWER %>
			<% rollString = "App Viewer" %>
			<% end %>
			<tr>
				<td><%= user.id %></td>	
				<td><a href="mailto:<%= user.email %>"><%=user.email%></a></td>
				<td><%= rollString %></td>
				<td>Change Roll Delete</td>
			</tr>
		<% end %>
	</tbody>
</table>